project.version=3.0
# deployment directories for each version of the InfoGlue webapp
deploy.dir.shared=/usr/share/tomcat6/
webappVersion=3.0

#Only needed if you want the cms and working apps installed on this server
deploy.dir.cms=/usr/share/tomcat6/webapps/pulseCMS
deploy.dir.working=/usr/share/tomcat6/webapps/pulseDeliverWorking

#Only needed if you want the live app installed on this server
deploy.dir.live=/usr/share/tomcat6/webapps/pulseDeliverLive

externalWebServerAddress=http://<%= node['pulse']['main_url'] %>
#webServerAddress=http://localhost:8080
#liveWebServerAddress=http://localhost:8080
context.root.cms=pulseCMS
context.root.working=pulseDeliverWorking
context.root.preview=pulseDeliverPreview
context.root.live=pulseDeliverLive

operatingMode.cms=0
operatingMode.working=0
operatingMode.preview=2
operatingMode.live=3

database.driver.class=com.mysql.jdbc.Driver
database.driver.engine=mysql
database.url=jdbc:mysql://<%= @node['pulse']['db_host']%>:3306/<%= @node['pulse']['db_name']%>?autoReconnect=true&amp;useUnicode=true&amp;characterEncoding=UTF-8
database.user=<%= @node['pulse']['db_user']%>
database.password=<%= @node['pulse']['db_pass']%>
database.use.unicode=true
database.encoding=UTF-8
database.maxConnections=300
database.mapping=mapping.xml

hibernate.dialect=net.sf.hibernate.dialect.MySQLDialect
hibernate.show_sql=false

administratorUserName=<%= @node['pulse']['admin_name']%>
administratorPassword=<%= @node['pulse']['admin_pass']%>
administratorEmail=<%= @node['pulse']['admin_email']%>

loginUrl=Login.action
invalidLoginUrl=Login!invalidLogin.action
authenticatorClass=org.pulse.cms.security.InfoGlueBasicAuthenticationModule
authorizerClass=org.pulse.cms.security.InfoGlueBasicAuthorizationModule

configured=true
