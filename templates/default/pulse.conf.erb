<VirtualHost *:8090>

    ProxyRequests Off
    <Proxy balancer://mycluster>
        BalancerMember http://localhost:8080/pulse
        Order deny,allow
        Allow from all
    </Proxy>

    ProxyPass / balancer://mycluster
    ProxyPassReverse / balancer://mycluster
    <Location />
        Order allow,deny
        Allow from all
    </Location>

</VirtualHost>
